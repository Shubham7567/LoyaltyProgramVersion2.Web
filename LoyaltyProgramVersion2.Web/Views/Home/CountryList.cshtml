@model IEnumerable<LoyaltyProgramVersion2.BLL.Views.CountryListView>

@{
    ViewBag.Title = "CountryList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CountryList</h2>

<div class="card">
    <div class="card-body d-flex">
        <form class="form-inline" method="get">
            <ul class="nav">
                <li class="nav-item mx-2">
                    <input type="text" class="form-control" id="search" name="search">
                </li>
                <li class="nav-item mx-2">
                    <button type="submit" class="btn btn-primary mb-2">Search</button>
                </li>
                <li class="nav-item mx-2">
                    @Html.ActionLink("Add New Country", "AddCountry", "Home", new { @class="btn btn-outline-info"})
                </li>
            </ul>
        </form>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>IsDeactivated</th>
                    <th>CreatedOn</th>
                    <th>ModifiedOn</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                { 
                <tr>
                    <td>@item.CountryID</td>
                    <td>@item.Name</td>
                    <td>@item.IsDeactivated</td>
                    <td>@item.CreatedOn.ToString("dd-MM-yyyy")</td>
                    <td>@item.ModifiedOn.ToString("dd-MM-yyyy")</td>
                    <td>
                        @Html.ActionLink("Edit", "EditCountry", "Home", new { id = item.CountryID },new { @class = "btn btn-warning mx-1" })
                        @Html.ActionLink("Detail", "DetailCountry", "Home", new { id = item.CountryID }, new { @class = "btn btn-info mx-1" })
                        @Html.ActionLink("Delete", "DeleteCountry", "Home", new { id = item.CountryID }, new { @class = "btn btn-danger mx-1" })
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>